#include <msp430.h>
#include "libTimer.h"
#define LEDS (BIT0 | BIT6)
void led_init() {
  P1DIR |= LEDS;
  P1OUT &= ~LED_GREEN;
  P1OUT |= LED_RED;
  
  P2REN |= SWITCHES;/* enables resistors for switches */
  P2IE |= SWITCHES;/* enable interrupts from switches */
  P2OUT |= SWITCHES;/* pull-ups for switches */
  P2DIR &= ~SWITCHES;

  lcd_init();
  configureClocks();
  enableWDTInterrupts();

  or_sr(0x8);          // CPU off
  clearScreen(COLOR_RED);
}
void toggleRedGreen(){
  P1OUT ^= LED_GREEN;
  P1OUT ^= LED_RED;
}

void greenBeat(){
  if(secondCount <= 125){
    P1OUT ^= LED_GREEN;
  }
  if(secondCount <= 62){
    P1OUT ^= LED_RED;
  }
}
